<div class="container d-flex justify-content">
  <div class="table1">
    <h1><%= @super_power.name %></h1>
      <nav>
      <a href="#">Share ⏎ </a>
      <a href="#">Save ☆ </a>
    </nav>
    <% if @super_power.poster_url.attached? %>
      <%= cl_image_tag @super_power.poster_url.key, class: "image-rounded" %>
    <% end %>
    <h3 class = "after-photo">Description</h3>
    <p><%= @super_power.description %></p>
  </div>

  <div class="table2">

    <h2 class = "rented">Rented by:</h2>
    <%= @super_power.user.name %>


    <p class="price"> <%= @super_power.price %> €</p>
    <hr class="line">

    <%= link_to "Update", edit_super_power_path, class: "button-1" %>
    <% if @super_power.user_id == current_user.id %>
      <%= link_to "Delete", super_power_path(@super_power), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "button-1" %>
    <% end %>
    <div class="calendar">
    <%= simple_form_for [@super_power, @reservation], data: { controller: 'flatpickr' } do |f| %>
        <%= f.input :beginning_date, as: :string, input_html: { data: { flatpickr_target: "startTime" } }%>
        <%= f.input :ending_date, as: :string, input_html: { data: { flatpickr_target: "endTime" }, id: 'end_time' } %>
        <%= f.submit "Reserve", class: "button-1" %>
    <% end %>
    </div>
  </div>
</div>

<footer>
