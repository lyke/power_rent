<div class="container d-flex justify-content-center">
  <div class="table1">
    <h1><strong><%= @super_power.name %></strong></h1>
    <% if @super_power.poster_url.attached? %>
      <%= cl_image_tag @super_power.poster_url.key, height: 300, width: 400 %>
    <% end %>
    <h3>Why?</h3>
    <p><%= @super_power.description %></p>
  </div>

  <div class="table2">
  <h2>Rented by:</h2>
  <%= @super_power.user_id %>
    <nav>
      <a href="#">Share ☆</a>
      <a href="#">Save ☾ </a>
    </nav>
   <p class="price"> <%= @super_power.price %> €</p>
    <hr class="line">
    <a href="https://www.w3docs.com/" class="button-1">Reserve</a>
    <%= link_to "Update", edit_super_power_path, class: "button-1" %>
  </div>
</div>

<div class="reviews justify-content-center">
  <hr class="bottom_line">
  <h2><strong>Reviews</strong></h2>
</div>
