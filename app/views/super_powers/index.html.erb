
<div class="row justify-content-center pt-3">
  <div>
    <%= form_with url: super_powers_path, method: :get, class: "form-inline d-flex sentence search-bar-width" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control mr-sm-2",
        placeholder: "Search Super Power"
       %>
      <%= submit_tag "Search", name: "", class: "btn-margin-padding my-2 my-sm-0" %>
    <% end %>
  </div>
</div>

<div class="index-grid power-card">
    <% @super_powers.each do |super_power| %>
    <div class="card" style="width: 29rem";>
      <div class="container">
        <div >

            <div class="card-img-top card_power pt-2 p-auto">
              <% if super_power.poster_url.attached? %>
                <%= cl_image_tag super_power.poster_url.key, height: 300, width: 400, crop: :fill, class: "card-img" %>
              <% end %>
            </div>

            <div class="card-title">
            <%= link_to super_power.name, super_power_path(super_power) %>
            </div>
            <div class="card-text">
              <%= super_power.description %>
            </div>

            <h2><%= super_power.price %>â‚¬</h2>

            <div class="btn-margin-padding ">
              <%= link_to "Delete", super_power_path(super_power), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "white-btn" %>
            </div>

        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
