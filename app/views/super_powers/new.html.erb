<div class="container">
<h1>Add my super power !</h1>

<div class="card">
  <%= simple_form_for @super_power do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.input :poster_url, as: :file %>
  </div>
  <div class="card2">
    <%= f.label :description %>
    <%= f.text_field :description %>
    </div>
    <div class="card3">
    <%= f.submit %>
    </div>
  <% end %>
  <%= link_to "Back to list", super_powers_path %>
</div>
